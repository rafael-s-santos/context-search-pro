{
  "manifest_version": 3,
  "name": "Context Search Pro",
  "description": "Quickly search selected text on Google, Gemini and YouTube.",
  "version": "1.1.0",

  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "https://gemini.google.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Context Search Pro"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}